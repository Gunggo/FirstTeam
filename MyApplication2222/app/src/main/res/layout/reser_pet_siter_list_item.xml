<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/picturePager"
        android:layout_width="match_parent"
        android:layout_height="179dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/listAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#FFFAFAFA"
        android:text="경기 시흥시 은행로144번길"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/likeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#00FF0000"
        app:srcCompat="@drawable/empty_like" />

    <ImageView
        android:id="@+id/listLeftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/white_arrow_left" />

    <ImageView
        android:id="@+id/listRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="75dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/white_arrow_right" />

    <TextView
        android:id="@+id/listScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="160dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="신규\n8.6"
        android:textColor="#FFFFFF" />

</FrameLayout>